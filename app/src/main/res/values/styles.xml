<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/custom_style</item>
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@drawable/back_btn</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
    </style>

    <style name="logo">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">@dimen/top</item>
    </style>

    <style name="docs_header">

        <item name="android:padding">@dimen/top</item>
        <item name="android:color">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">@color/whiteText</item>
    </style>

    <style name="heading">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:text">@string/swd</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="login_input_layout">
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="passwordToggleTint">@color/whiteText</item>

    </style>

    <style name="admin_input_layout">
        <item name="android:textColorHint">@color/black</item>
        <item name="passwordToggleTint">@color/black</item>

    </style>

    <style name="login_names">
        <item name="android:layout_marginTop">@dimen/top</item>
        <item name="android:layout_marginLeft">@dimen/left</item>
        <item name="android:layout_marginRight">@dimen/right</item>
        <item name="android:textSize">@dimen/text</item>

    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="background_img">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="button_login">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginTop">16dp</item>
        <item  name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_login</item>
    </style>

    <style name="button_home">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginTop">16dp</item>
        <item  name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/btn_home</item>
    </style>


    <style name="button_admin_doc">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
    </style>
    <style name="custom_style" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@drawable/bgnd</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="text_view_goodies">
        <item name="android:gravity">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="edit_text_goodies">
        <item name="android:hint">@string/quantityofGoodies</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">5dp</item>
        <item name="android:inputType">number</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="edit_text_custom_name">
        <item name="android:hint">@string/custom_name_hint</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="edit_text_profile">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:enabled">true</item>
        <item name="android:focusable">true</item>

    </style>

</resources>
