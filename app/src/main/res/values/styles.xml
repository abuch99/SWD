<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/custom_style</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="actionButtonStyle">@style/ActionButton</item>
        <!--<item name="colorControlHighlight">@color/colorAccent</item>-->
        <item name="homeAsUpIndicator">@drawable/back_btn</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
    </style>

    <style name="logo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">@dimen/top</item>
    </style>

    <style name="docs_header">

        <item name="android:padding">@dimen/top</item>
        <item name="android:color">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">@color/whiteText</item>
    </style>

    <style name="heading">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:text">@string/swd</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/whiteText</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="login_input_layout">
        <item name="android:textColorHint">@color/whiteText</item>
        <item name="passwordToggleTint">@color/whiteText</item>
        <item name="android:layout_marginTop">16dp</item>

    </style>

    <style name="admin_input_layout">
        <item name="android:textColorHint">@color/black</item>
        <item name="passwordToggleTint">@color/black</item>

    </style>

    <style name="login_names">
        <item name="android:layout_marginTop">@dimen/top</item>
        <item name="android:layout_marginLeft">@dimen/left</item>
        <item name="android:layout_marginRight">@dimen/right</item>
        <item name="android:textSize">@dimen/text</item>

    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:actionButtonStyle">@style/Widget.AppCompat.ActionButton</item>
    </style>

    <style name="background_img">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="button_login">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_login</item>
    </style>

    <style name="button_home">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/btn_home</item>
    </style>


    <style name="button_admin_doc">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"></style>

    <style name="custom_style" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="android:background">@drawable/bgnd</item>
    </style>

    <style name="text_view_goodies">
        <item name="android:gravity">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="edit_text_goodies">
        <item name="android:hint">@string/quantityofGoodies</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">5dp</item>
        <item name="android:inputType">number</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="edit_text_custom_name">
        <item name="android:hint">@string/custom_name_hint</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="edit_text_profile">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:enabled">true</item>
        <item name="android:focusable">true</item>

    </style>

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TextAppearance.MaterialComponents.Headline1</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="quick_link_card" parent="CardView">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_marginBottom">35dp</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">15dp</item>
    </style>

    <style name="ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:buttonTint">@color/colorPrimaryLight</item>
    </style>

</resources>
